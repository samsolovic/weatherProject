.weather-wrapper {
  padding-top: 174rpx;
  padding-bottom: 250rpx;
  position: relative;
}
.weather-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
.title {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}
.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}
.timetips {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.timetips-icon {
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.timetips-text {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}
.forecast-wrapper {
  display: flex;
  align-items: center;
}
.forecast-item {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
  text-align: center;
  align-items: center;
  width: 120rpx;
}
.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}
.forecast-weather {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  width: 60rpx;
  height: 60rpx;
}
.forecast-temp {
  font-size: 40rpx;
  line-height: 56rpx;
}

